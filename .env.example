# Turso Database Configuration
# Get these from https://turso.tech/app (create a free database)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Local development fallback (optional)
# Uncomment to use local SQLite instead of Turso
# LOCAL_DB_PATH="./cv_data.db"

# Admin Database (multi-tenant)
TURSO_ADMIN_DB_URL=
TURSO_ADMIN_DB_TOKEN=

# Turso Platform API (for provisioning tenant databases)
TURSO_PLATFORM_API_TOKEN=
TURSO_ORG_NAME=

# Auth.js
AUTH_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
